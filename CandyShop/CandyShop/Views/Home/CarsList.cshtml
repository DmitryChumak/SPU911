<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortType="TitleAsc">
                    Title
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortType="ModelAsc">
                    Model
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortType="PriceAsc">
                    Price
                </a>
            </th>
            <th>
                <form asp-controller="Home" asp-action="Index" method="get">
                    <select name="company" asp-items="Model.Companies"></select>
                    <input type="submit" value="Filter" />
                </form>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td>@car.Title</td>
                <td>@car.Model</td>
                <td>@car.Price</td>
                <td>
                    @using (Html.BeginForm("AddToCart", "Cart"))
                    {
                        <input type="hidden" value="@car.CarId" name="CarId" />
                        @Html.Hidden("returnUrl", Context.Request.Path)
                        <input type="submit" value="+ Add To Cart" class="btn btn-primary" />
                    }
                </td>
                <td><a href="~/Home/Buy/@car.CarId" class="btn btn-secondary">Buy</a></td>
            </tr>
        }
    </tbody>
</table>
